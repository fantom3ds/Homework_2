<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.StartActivity"
        android:background="@drawable/background"
>

    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTransparentBlack"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v. 2.0"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/version"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textAlignment="center"

            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Начать кутить"
            android:id="@+id/btn_register"
            app:layout_constraintBottom_toTopOf="@id/version"
            android:textColor="@color/colorWhite"
            android:background="@drawable/rectangle_green"
            android:layout_marginBottom="@dimen/margin_x2"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_register"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@drawable/rectangle_white"
            android:textColor="@color/colorGreenBtn"
            android:text="Вход для Кутежника"
            android:id="@+id/btn_login"
            android:textAllCaps="false"


            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_login"
            android:layout_marginBottom="@dimen/margin_x3"
            android:text="@string/welcome_text"
            android:textColor="@color/colorWhite"
            android:id="@+id/welcome_text"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/welcome_text"
            android:text="Кути честно."
            android:textColor="@color/colorWhite"
            android:textSize="34sp"
            android:layout_marginBottom="@dimen/margin_x3"

            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            />

</androidx.constraintlayout.widget.ConstraintLayout>